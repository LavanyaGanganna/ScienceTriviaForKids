<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_anatomy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="my.awesome.lavanya.sciencetriviaforkids.Anatomy"
    android:background="@drawable/quizback"
    tools:showIn="@layout/activity_anatomy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/questtext"
            android:textColor="@color/colorblack"/>

        <Button
            android:text="Button"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/button"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:background="@drawable/button_corners" />

        <Button
            android:text="Button"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAllCaps="false"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_corners" />

        <Button
            android:text="Button"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:id="@+id/button3"
            android:textSize="25sp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_corners"/>

        <Button
            android:text="Button"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:id="@+id/button4"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_corners"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:id="@+id/playagainlayout"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Score"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:id="@+id/winnermsg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="answered 9/10"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:id="@+id/questionsans"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/playagain"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:background="@drawable/play_corners"
            android:layout_gravity="center_horizontal"
            android:onClick="playagain"/>
    </LinearLayout>
</FrameLayout>